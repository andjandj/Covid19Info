@model Covid19Info.ViewModels.SlajderViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="margin-top:8%; margin-left:5%; margin-right:5%;">Kreiraj</h1>

<h4 style="margin-left:5%; margin-right:5%;">Slajder vest</h4>
<hr />
<div class="row" style="margin-top:2%; margin-left:5%; margin-right:5%;margin-top:2%">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Podnaslov" class="control-label"></label>
                <input asp-for="Podnaslov" class="form-control" />
                <span asp-validation-for="Podnaslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PodnaslovAl" class="control-label"></label>
                <input asp-for="PodnaslovAl" class="form-control" />
                <span asp-validation-for="PodnaslovAl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sazetak" class="control-label"></label>
                <input asp-for="Sazetak" class="form-control" />
                <span asp-validation-for="Sazetak" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SazetakAl" class="control-label"></label>
                <input asp-for="SazetakAl" class="form-control" />
                <span asp-validation-for="SazetakAl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tekst" class="control-label"></label>
                <input asp-for="Tekst" class="form-control" />
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TekstAl" class="control-label"></label>
                <input asp-for="TekstAl" class="form-control" />
                <span asp-validation-for="TekstAl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slika" class="control-label"></label>
                <input type="file" asp-for="Slika" class="form-control" />
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:2%; margin-left:5%; margin-right:5%;margin-top:2%">
    <a asp-action="Index">Nazad na listu</a>
</div>

