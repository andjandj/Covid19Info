@model Covid19Info.Models.BrojZarazenihOsoba

@{
    ViewData["Title"] = "Details";
}

<h1 style="margin-top:10%; margin-left:5%">Detalji</h1>

<div style="margin-left:5%; margin-right:5%;margin-top:2%">
    <h4>Broj zarazenih osoba</h4>
    <hr />
    <dl class="row">
      
        <dt class = "col-sm-2">
            @Html.DisplayName("Broj testiranih osoba")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojTestiranihOsobaDnevno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Broj potvrdjenih slucajeva")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojPotvrdjenihSlucajeva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Broj smrtnih slucajeva")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojSmrtnihSlucajeva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Ukupan broj testiranih slucajeva")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UkupanBrojTestiranihSlucajeva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Datum testiranja")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumTestiranja)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Deo na koji se podaci odnose")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeoNaKojiSePodaciOdnose)
        </dd>
    </dl>
</div>
<div style="margin-left:5%; margin-right:5%;margin-top:2%">
    @Html.ActionLink("Izmeni", "Edit", new {  id = Model.Id }) |
    <a asp-action="Index">Nazad na listu</a>
</div>
