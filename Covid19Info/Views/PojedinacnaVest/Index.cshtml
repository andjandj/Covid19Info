@using Covid19Info.Services;
@model Covid19Info.ViewModels.KomentariViewModel
@{ 
    
    Covid19InfoContext _context = new Covid19InfoContext();
    Vesti vest = VestiServices.PoslednjaVest();
    List<Vesti> listaVesti = VestiServices.ListOfVesti();
}
<!-- ======= Blog Header ======= -->
<div class="header-bg page-area">
    <div class="container position-relative">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="slider-content text-center">
                    <div class="header-bottom">
                        <div class="layer2">
                            <h1 class="title2">@vest.Naslov </h1>
                        </div>
                        <div class="layer3">
                            <h2 class="title3">Stranica vesti</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Blog Header -->
<!-- ======= Blog Page ======= -->
<div class="blog-page area-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="page-head-blog">
                    <div class="single-blog-page">
                        <!-- search option start -->
                        <form action="#">
                            <div class="search-option">
                                <input type="text" placeholder="Pretraga...">
                                <button class="button" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                        <!-- search option end -->
                    </div>
                    <div class="single-blog-page">
                        <!-- recent start -->
                        <div class="left-blog">
                            <h4>Najnovije vesti</h4>
                            <div class="recent-post">
                                <!-- start single post -->
                                @for (int i = 0; i < 6; i++)
                                {
                                <div class="recent-single-post">
                                    <div class="post-img">
                                        <a href="#">
                                            <img src="~/Images/@listaVesti[i].Slika" alt="@listaVesti[i].Naslov">
                                        </a>
                                    </div>
                                
                                    <div class="pst-content">
                                        <p><a href="#"> @listaVesti[i].Sazetak</a></p>
                                    </div>
                                </div>
                                }
                                <!-- End single post -->
                               
                            </div>
                        </div>
                        <!-- recent end -->
                    </div>
                    <div class="single-blog-page">
                        <div class="left-blog">
                            <h4>Kategorije</h4>
                            <ul>
                                <li>
                                    <a href="~/Home/Imunizacija">Imunizacija</a>
                                </li>
                               
                            </ul>
                        </div>
                    </div>
                    <div class="single-blog-page">
                        <div class="left-blog">
                            <h4>arhiva</h4>
