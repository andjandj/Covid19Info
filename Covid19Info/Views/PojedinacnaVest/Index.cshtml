                </div>
            </div>
            <!-- End left sidebar -->
            <!-- Start single blog -->
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <!-- single-blog start -->
                        <article class="blog-post-wrapper">
                            <div class="post-thumbnail">
                                <img src="~/Images/@vest.Slika" alt="@vest.Naslov" />
                            </div>
                            <div class="post-information">
                                <h2>@vest.Naslov</h2>
                                <div class="entry-meta">
                                    <span class="author-meta"><i class="bi bi-person"></i> </span>
                                    <span><i class="bi bi-clock"></i>@vest.Datum</span>
                                    <span class="tag-meta">
                                        <i class="bi bi-folder"></i>
                                        @*<a href="#">Tag 1</a>,
                                        <a href="#">Tag 2</a>*@
                                    </span>
                                    <span>
                                        <i class="bi bi-tags"></i>
                                        @*<a href="#">Podtag 1</a>,*@

                                    </span>
                                    <span><i class="bi bi-chat"></i> <a href="#">6 komentara</a></span>
                                </div>
                                <div class="entry-content">
                                   <p>@vest.Tekst</p>
                                </div>
                            </div>
                        </article>
                        <div class="clear"></div>
                        <div class="single-post-comments">
                            <div class="comments-area">
                                <div class="comments-heading">
                                    <h3>6 komentara</h3>
                                </div>
                                <div class="comments-list">
                                    <ul>
                                        <li class="threaded-comments">
                                            <div class="comments-details">
                                                <div class="comments-list-img">
                                                    <img src="~/assets/img/blog/b02.jpg" alt="post-author">
                                                </div>
                                                <div class="comments-content-wrap">
                                                    <span>

                                                        Ime
                                                        <span class="post-time">Oktobar 6, 2014 u 4:25 pm</span>
                                                        <a href="#">Odgovori</a>
                                                    </span>
                                                    <p>Quisque semper nunc vitae erat pellentesque, ac placerat arcu consectetur</p>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="comments-details">
                                                <div class="comments-list-img">
                                                    <img src="~/assets/img/blog/b02.jpg" alt="post-author">
                                                </div>
                                                <div class="comments-content-wrap">
                                                    <span>

                                                        Ime
                                                        <span class="post-time">Oktobar 6, 2014 u 6:18 pm </span>
                                                        <a href="#">Odgovori</a>
                                                    </span>
                                                    <p>Quisque orci nibh, porta vitae sagittis sit amet, vehicula vel mauris. Aenean at justo dolor. Fusce ac sapien bibendum, scelerisque libero nec</p>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="threaded-comments">
                                            <div class="comments-details">
                                                <div class="comments-list-img">
                                                    <img src="~/assets/img/blog/b02.jpg" alt="post-author">
                                                </div>
                                                <div class="comments-content-wrap">
                                                    <span>

                                                        Ime
                                                        <span class="post-time">Oktobar 6, 2024 u 7:25 pm</span>
                                                        <a href="#">Odgovori</a>
                                                    </span>
                                                    <p>Quisque semper nunc vitae erat pellentesque, ac placerat arcu consectetur</p>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="comment-respond">
                                <h3 class="comment-reply-title">Ostavi komentar</h3>
                                @if (@ViewBag.Msg != null)
                                {
                                    <p style="color:red">@ViewBag.Msg</p>
                                }
                                <span class="email-notes">Tvoja e-adresa nece biti javna. Obavezna polja su obelezena *</span>
                                <form asp-action="Index" method="post" asp-route-id="@vest.Id">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <p>Korisničko ime *</p>
                                            <input type="text" asp-for="KorisnickoIme" name="KorisnickoIme" />
                                        </div>
                                        <div class="col-lg-4 col-md-4">
                                            <p>Email *</p>
                                            <input type="email" asp-for="Email" name="Email" />
                                        </div>

                                        <div class="col-lg-12 col-md-12 col-sm-12 comment-form-comment">
                                            <p>Tekst</p>
                                            <textarea id="message-box" cols="30" rows="10" asp-for="TekstKomentara" name="TekstKomentara"></textarea>
                                            <input type="submit" value="Pošalji komentar" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- single-blog end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Blog Page -->